{
  "name": "hapijs-starter",
  "version": "1.0.0",
  "description": "Skeleton project with HapiJS",
  "main": "backend/index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register test/**/*.spec.js",
    "test:watch": "npm test -- --watch",
    "start": "node backend/index.js",
    "build": "webpack -p --progress --colors",
    "dev": "webpack --progress --colors --watch & nodemon",
    "lint": "eslint --ext .js,.jsx frontend/**/** backend/**/**"
  },
  "database": {
    "development": {
      "dialect": "sqlite",
      "storage": "./db.sqlite"
    },
    "production": {
      "dialect": "sqlite",
      "storage": "./db.sqlite"
    },
    "test": {
      "dialect": "sqlite",
      "storage": "./db.test.sqlite",
      "logging": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rkovacevic/hapijs-starter.git"
  },
  "keywords": [
    "hapijs"
  ],
  "author": "Robert Kovacevic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rkovacevic/hapijs-starter/issues"
  },
  "homepage": "https://github.com/rkovacevic/hapijs-starter#readme",
  "dependencies": {
    "bcrypt": "^0.8.5",
    "bluebird": "^3.0.5",
    "boom": "^3.0.0",
    "bootstrap": "^3.3.5",
    "bootstrap-webpack": "0.0.5",
    "css-loader": "^0.21.0",
    "deep-equal": "^1.0.1",
    "es6-promise": "^3.0.2",
    "good": "^6.4.0",
    "good-console": "^5.1.0",
    "hapi": "^11.0.3",
    "hapi-auth-cookie": "^3.1.0",
    "history": "^1.13.0",
    "inert": "^3.2.0",
    "jquery": "^2.1.4",
    "less": "^2.5.3",
    "lodash": "^3.10.1",
    "qs": "^5.2.0",
    "react": "^0.14.0",
    "react-bootstrap": "^0.28.1",
    "react-dom": "^0.14.0",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.0-rc3",
    "react-router-bootstrap": "^0.19.3",
    "redux": "^3.0.4",
    "redux-logger": "^2.0.4",
    "redux-router": "^1.0.0-beta3",
    "redux-thunk": "^1.0.0",
    "sequelize": "^3.13.0",
    "sqlite3": "^3.1.1",
    "whatwg-fetch": "^0.10.1"
  },
  "devDependencies": {
    "babel-core": "^6.0.20",
    "babel-eslint": "^4.1.4",
    "babel-loader": "^6.0.1",
    "babel-preset-es2015": "^6.1.2",
    "babel-preset-react": "^6.1.2",
    "chai": "^3.4.1",
    "css-loader": "^0.21.0",
    "eslint": "^1.10.2",
    "eslint-plugin-react": "^3.6.2",
    "exports-loader": "^0.6.2",
    "extract-text-webpack-plugin": "^0.8.2",
    "file-loader": "^0.8.4",
    "imports-loader": "^0.6.5",
    "jsdom": "^7.0.2",
    "less-loader": "^2.2.1",
    "mocha": "^2.3.4",
    "nodemon": "^1.8.0",
    "react-addons-test-utils": "^0.14.2",
    "react-hot-loader": "^1.3.0",
    "sinon": "^1.17.2",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.1"
  }
}
